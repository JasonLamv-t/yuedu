/* pages/article/article.wxss */
page {
  background-color: #f2f4f6;
}

.page {
  width: 100%;
  height: 100%;
  background-color: #f2f4f6;
}

.tabs {
  width: 100%;
  height: 36px;
  line-height: 32px;
  display: inline-flex;
  background-color: #E0EEE0;
}

.weui-tabs-swiper-0 {
  height: 100rpx;
}

.swiper-item {
  width: 100%;
  height: 100%;
}

.weui-tabs-bar__content {
  display: inline-flex;
}

.weui-tabs-bar__item {
  width: 33%;
  margin: 0 auto;
  text-align: center;
}

.tab-bar-title__selected {
  font-weight: bold;
}

.cell {
  width: 100%;
  height: 90px;
  display: flex;
  background-color: white;
}

.cell-img{
  width: 120px;
  height: 90px;
  margin: auto 0;
}

.cell-title{
  width: 56%;
  height: 80px;
  padding: 6px;
}

.cell-right{
  margin: auto 0;
  margin-right: 4px;
  margin-left: auto;
  color: #d8d8d8;
}

.addBtn{
  width: 48px;
  height: 48px;
  font-size: 48px;
  line-height: 48px;
  position: absolute;
  bottom: 40px;
  right: 20px;
  color: #FD4C5D;
}
scroll-view{
  height:99%;
}